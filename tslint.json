{
	"extends": [
		"tslint:recommended"
	],
	"rules": {
		"ordered-imports": false,
		"no-unused-expression": true,
		"no-duplicate-variable": true,
		"curly": true,
		"class-name": true,
		"semicolon": true,
		"triple-equals": true,
		"object-literal-sort-keys": false,
		"variable-name": false,
		"max-line-length": [
			true,
			160
		],
		"max-classes-per-file": true,
		"no-console": false,
		"indent": [
			true,
			"tabs",
			4
		],
		"quotemark": [
			true,
			"double"
		],
		"whitespace": [
			true,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-separator",
			"check-type"
		]
	},
	"options": {
		"typeCheck": false
	}
}